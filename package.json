{
  "name": "node-starter",
  "version": "1.0.1",
  "description": "",
  "main": "build/index.js",
  "private": true,
  "license": "MPL-2.0",
  "engines": {
    "node": ">=12",
    "npm": ">=6.9"
  },
  "scripts": {
    "clean": "npm run build:clean",
    "copy-assets": "copyfiles docs/* public/* build/",
    "build": "npm run copy-assets && npm run tsc",
    "build:watch": "npm run copy-assets && npm run tsc -- -w",
    "build:clean": "rimraf build",
    "tsc": "tsc",
    "start": "npm run db:migrate && node build/index.js",
    "start:dev": "nodemon build/index.js",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "lint": "esw *.ts server/**/*.ts config/**/*.ts --color",
    "lint:watch": "npm run lint -- --watch",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=test npm run db:migrate && cross-env NODE_ENV=test mocha index.test.ts server",
    "test:watch": "npm test -- --watch",
    "test:coverage": "nyc npm test",
    "cloc": "cloc config db scripts/ server/ index.ts index.route.ts index.test.ts"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "es6",
    "mocha",
    "istanbul",
    "REST",
    "API",
    "boilerplate"
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "camelcase-keys": "https://github.com/mskec/camelcase-keys#d24a316",
    "celebrate": "^13.0.4",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "helmet": "^3.23.3",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "lru-cache": "^6.0.0",
    "method-override": "^3.0.0",
    "moment": "^2.29.1",
    "pg": "8.5.1",
    "sequelize": "^6.4.0",
    "sequelize-cli": "^6.2.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bluebird": "^3.5.33",
    "@types/bluebird-global": "^3.5.12",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.5",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1-alpha.2",
    "@typescript-eslint/parser": "^4.14.1-alpha.2",
    "chai": "4.2.0",
    "chai-http": "^4.3.0",
    "copyfiles": "^2.4.1",
    "cross-env": "7.0.3",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-watch": "^7.0.0",
    "faker": "^5.1.0",
    "husky": "^4.3.8",
    "mocha": "^8.2.1",
    "mock-require": "^3.0.3",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.3",
    "supertest": "^6.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "mocha": {
    "ui": "bdd",
    "reporter": "spec",
    "colors": true,
    "extension": [
      ".test.ts",
      ".test.js"
    ],
    "watchFiles": [
      "index.ts",
      "index.test.ts",
      "config",
      "server"
    ],
    "require": "ts-node/register",
    "recursive": true,
    "exit": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "index.ts",
      "index.route.ts",
      "config/**",
      "server/**"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  }
}
